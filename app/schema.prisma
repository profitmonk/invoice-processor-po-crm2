// ============================================
// CRM MODELS
// ============================================

model Resident {
  id                    String           @id @default(uuid())
  
  firstName             String
  lastName              String
  email                 String
  phoneNumber           String
  
  propertyId            String
  property              Property         @relation(fields: [propertyId], references: [id])
  unitNumber            String
  moveInDate            DateTime
  
  monthlyRentAmount     Float
  rentDueDay            Int              @default(1)
  
  leaseStartDate        DateTime
  leaseEndDate          DateTime
  leaseType             LeaseType        @default(ONE_YEAR)
  
  emergencyContactName  String?
  emergencyContactPhone String?
  emergencyContactRelationship String?
  
  status                ResidentStatus   @default(ACTIVE)
  
  organizationId        String
  organization          Organization     @relation(fields: [organizationId], references: [id])
  
  maintenanceRequests   MaintenanceRequest[]
  conversations         Conversation[]
  vapiCalls             VapiCall[]
  
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  
  @@unique([organizationId, phoneNumber])
  @@index([organizationId, status])
  @@index([propertyId])
}

model Lead {
  id                    String           @id @default(uuid())
  
  firstName             String
  lastName              String
  email                 String?
  phoneNumber           String
  
  leadSource            LeadSource       @default(OTHER)
  status                LeadStatus       @default(NEW)
  priority              LeadPriority     @default(WARM)
  
  interestedPropertyId  String?
  interestedProperty    Property?        @relation(fields: [interestedPropertyId], references: [id])
  desiredBedrooms       Int?
  budgetMin             Float?
  budgetMax             Float?
  desiredMoveInDate     DateTime?
  
  assignedManagerId     String?
  assignedManager       User?            @relation(fields: [assignedManagerId], references: [id])
  
  notes                 String?          @db.Text
  
  organizationId        String
  organization          Organization     @relation(fields: [organizationId], references: [id])
  
  conversations         Conversation[]
  vapiCalls             VapiCall[]
  
  convertedToResidentId String?          @unique
  convertedAt           DateTime?
  
  createdViaVapi        Boolean          @default(false)  // üÜï NEW
  lastVapiCallAt        DateTime?        // üÜï NEW
  
  createdAt             DateTime         @default(now())
  updatedAt             DateTime         @updatedAt
  
  @@unique([organizationId, phoneNumber])
  @@index([organizationId, status])
  @@index([assignedManagerId])
  @@index([interestedPropertyId])
}

model Conversation {
  id                    String           @id @default(uuid())
  
  residentId            String?
  resident              Resident?        @relation(fields: [residentId], references: [id], onDelete: Cascade)
  
  leadId                String?
  lead                  Lead?            @relation(fields: [leadId], references: [id], onDelete: Cascade)
  
  messageContent        String           @db.Text
  messageType           MessageType      @default(SMS)
  
  senderType            SenderType
  senderId              String?
  sender                User?            @relation(fields: [senderId], references: [id])
  
  aiGenerated           Boolean          @default(false)
  aiModel               String?
  aiPromptTokens        Int?
  aiResponseTokens      Int?
  
  status                MessageStatus    @default(SENT)
  
  twilioMessageSid      String?          @unique
  twilioCallSid         String?          @unique
  twilioStatus          String?
  errorMessage          String?
  
  organizationId        String
  organization          Organization     @relation(fields: [organizationId], references: [id])
  
  sentAt                DateTime         @default(now())
  deliveredAt           DateTime?
  readAt                DateTime?
  createdAt             DateTime         @default(now())
  
  @@index([residentId])
  @@index([leadId])
  @@index([organizationId])
  @@index([createdAt])
}

model MaintenanceRequest {
  id                    String                  @id @default(uuid())
  
  residentId            String
  resident              Resident                @relation(fields: [residentId], references: [id])
  
  propertyId            String
  property              Property                @relation(fields: [propertyId], references: [id])
  unitNumber            String
  
  requestType           MaintenanceRequestType  @default(GENERAL)
  title                 String
  description           String                  @db.Text
  priority              MaintenancePriority     @default(MEDIUM)
  status                MaintenanceStatus       @default(SUBMITTED)
  
  assignedToPhone       String?
  assignedToName        String?
  assignedManagerId     String?
  assignedManager       User?                   @relation(fields: [assignedManagerId], references: [id])
  
  resolutionNotes       String?                 @db.Text
  residentSatisfaction  Int?
  residentFeedback      String?                 @db.Text
  
  photoUrls             String[]                @default([])
  
  organizationId        String
  organization          Organization            @relation(fields: [organizationId], references: [id])
  
  vapiCallId            String?       // üÜï NEW
  vapiCall              VapiCall?     // üÜï NEW
  createdViaVapi        Boolean       @default(false)  // üÜï NEW
  
  createdAt             DateTime                @default(now())
  updatedAt             DateTime                @updatedAt
  completedAt           DateTime?
  
  @@index([residentId])
  @@index([propertyId])
  @@index([organizationId, status])
  @@index([priority])
  @@index([vapiCallId])
}

// ============================================
// üÜï NEW: VAPI INTEGRATION MODELS
// ============================================

model VapiCall {
  id                String         @id @default(uuid())
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  
  // Vapi Call Info
  vapiCallId        String         @unique
  propertyId        String
  property          Property       @relation(fields: [propertyId], references: [id])
  
  organizationId    String
  organization      Organization   @relation(fields: [organizationId], references: [id])
  
  // Caller Info
  callerPhone       String
  callerName        String?
  
  // Linked to Resident or Lead
  residentId        String?
  resident          Resident?      @relation(fields: [residentId], references: [id])
  leadId            String?
  lead              Lead?          @relation(fields: [leadId], references: [id])
  
  // Call Details
  callType          VapiCallType   @default(INBOUND)
  callStatus        VapiCallStatus @default(IN_PROGRESS)
  callDirection     String
  
  startedAt         DateTime?
  endedAt           DateTime?
  durationSeconds   Int?
  
  // AI Info
  assistantId       String
  transcript        String?        @db.Text
  summary           String?        @db.Text
  sentiment         String?
  
  // Actions Taken
  actionsTaken      Json?
  
  // Metadata
  recordingUrl      String?
  cost              Float?
  vapiMetadata      Json?
  
  // Relations
  maintenanceRequest  MaintenanceRequest?  @relation(fields: [maintenanceRequestId], references: [id])
  maintenanceRequestId String?             @unique
  
  @@index([propertyId])
  @@index([organizationId])
